#!/usr/bin/tic -x
xterm-24bit|xterm with 24-bit direct color mode,
	use=xterm-256color,
# Add sequences for setting 24-bit foreground and background colors.
# These aren't "official" terminfo capabilities but some programs (emacs) support them
	seta24=\E[38:2:%p1%{65536}%/%d:%p1%{256}%/%{255}%&%d:%p1%{255}%&%dm,
	setb24=\E[48:2:%p1%{65536}%/%d:%p1%{256}%/%{255}%&%d:%p1%{255}%&%dm,
# This makes the `clear` command clear the scrollback buffer. See man clear(1)
	E3=\E[3J,
